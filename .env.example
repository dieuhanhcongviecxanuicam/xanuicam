# Example environment variables (DO NOT commit real secrets to the repo)
# Copy to .env locally and fill values

# JWT signing secret (base64, recommended 64+ bytes)
JWT_SECRET=

# Database
DATABASE_URL=postgres://user:password@localhost:5432/xanuicam

# Backend
PORT=3000
NODE_ENV=development
ALLOW_LOCALHOST=true

# Superadmin secret (dev only)
SUPERADMIN_SECRET=

# Cloud / deploy IDs (put real values in CI secrets, not here)
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_API_TOKEN=

# Other optional runtime flags
SERVE_FRONTEND=false
SKIP_DEVICE_LIMIT=1

# Paths
SOFFICE_PATH=
EXPORT_TMP_DIR=
