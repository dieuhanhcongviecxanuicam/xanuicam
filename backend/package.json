{
  "name": "backend",
  "version": "2.0.0",
  "description": "Hệ thống Backend UBND xã Núi Cấm",
  "main": "server.js",
  "scripts": {
    "stress:xlsx": "node tools/generate_large_export.js",
    "stress:pdf": "node tools/generate_large_pdf.js",
    "migrate": "node scripts/run_migrations.js",
    "test": "jest --runInBand",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "env:setup": "node scripts/setup_env_keys.js",
    "env:rotate": "node scripts/rotate_audit_key.js",
    "smoke:test": "node ../frontend/smoke_user_profile_test.js",
    "admin:edit-test": "node ../tmp/admin_edit_test.js",
    "db:seed": "node scripts/seed.js",
    "seed:audit": "node scripts/seed_audit_logs.js",
    "geo:run": "node scripts/geo_worker.js",
    "geo:watch": "node scripts/geo_worker_runner.js",
    "prod:start": "pm2 start ecosystem.config.js --env production",
    "pm2:setup": "pm2 install pm2-logrotate && pm2 set pm2-logrotate:max_size 10M && pm2 set pm2-logrotate:retain 7 && pm2 set pm2-logrotate:compress true && pm2 start ecosystem.config.js --env production",
    "geo:worker": "node scripts/geo_worker.js",
    "prod:stop": "pm2 stop ubnd-backend",
    "prod:restart": "pm2 restart ubnd-backend",
    "prod:logs": "pm2 logs ubnd-backend",
    "postinstall": "node scripts/postinstall-deploy.js",
    "attachments:lifecycle": "node src/scripts/attachmentLifecycle.js",
    "sync:manager-departments": "node scripts/sync_manager_departments.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.4",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.6",
    "dotenv": "^16.4.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^7.0.0",
    "express": "^4.19.2",
    "express-validator": "^7.2.1",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-fetch": "^2.6.9",
    "pdfkit": "^0.17.2",
    "qrcode": "^1.5.1",
    "pg": "^8.17.2",
    "mammoth": "^1.4.18",
    "sanitize-html": "^2.11.1",
    "speakeasy": "^2.0.0",
    "ua-parser-js": "^1.0.37"
    ,
    "exceljs": "^4.3.0",
    "date-fns": "^2.30.0"
    ,"@sentry/node": "^10.38.0"
  },
  "devDependencies": {
    "jest": "^29.6.1",
    "supertest": "6.3.3",
    "nodemon": "^3.1.4"
  }
  ,
  "overrides": {
    "lodash": ">=4.17.22"
  }
}
